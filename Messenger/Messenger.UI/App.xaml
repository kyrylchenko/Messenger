<Application x:Class="Messenger.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Messenger.UI"
             StartupUri="Views/MainView.xaml"
               xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:Infrastucture="clr-namespace:Messenger.UI.Infrastructure">
   
        <Application.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Dark" PrimaryColor="LightBlue" SecondaryColor="LightBlue" />
                    <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
                </ResourceDictionary.MergedDictionaries>
                
            <Infrastucture:ViewModelLocator x:Key="vmLocator"></Infrastucture:ViewModelLocator>
            </ResourceDictionary>
        </Application.Resources>
   
</Application>
